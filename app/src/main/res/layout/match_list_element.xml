<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/matchView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/matchListImageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_baseline_account_box_24"
            android:padding="0dp" />

        <TextView
            android:id="@+id/matchListTextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="ImiÄ™" />

        <TextView
            android:id="@+id/matchListTextViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchListTextViewName"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:text="Wiek" />

        <TextView
            android:id="@+id/matchListTextViewId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/matchListTextViewName"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:text="" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

